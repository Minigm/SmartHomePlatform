<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_gas">
    <ImageView
        android:id="@+id/image_gas"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_gas"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/text_name_gas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_gas"
        android:layout_toEndOf="@+id/image_gas"
        android:text="名字"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/text_value_gas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_gas"
        android:layout_below="@+id/text_name_gas"
        android:text="浓度值"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/text_state_gas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_value_gas"
        android:layout_toRightOf="@+id/image_gas"
        android:textSize="12dp"
        android:text="状态"/>
</RelativeLayout>