<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".devices.act_COSensor">
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_cosensor"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:background="@android:color/white"/>
    <TextView
        android:id="@+id/text_state_cosensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chart_cosensor"
        android:text="状态："
        android:textSize="20dp"/>
    <Button
        android:id="@+id/buttonBack_cosensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="返回"
        android:onClick="buttonBack_cosensorOnClick"/>
    <Button
        android:id="@+id/buttonOn_cosensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="打开"
        android:onClick="buttonOn_cosensorOnClick"/>
    <Button
        android:id="@+id/buttonOff_cosensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonOn_cosensor"
        android:layout_centerHorizontal="true"
        android:text="关闭"
        android:onClick="buttonOff_cosensorOnClick"/>
</RelativeLayout>