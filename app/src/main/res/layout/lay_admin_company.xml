<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Administrator.act_admin_company">
    <RelativeLayout
        android:id="@+id/relativeLayout_0_admin_company"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <!--搜索框-->
        <SearchView
            android:id="@+id/searchView_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="[搜索列] [内容](仅输入all列出所有)"
            android:layout_toLeftOf="@+id/buttonExit_admin_company"/>
        <!--标题栏-->
        <TextView
            android:id="@+id/textTitle_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchView_admin_company"
            android:text="企业管理"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
        <!--用于显示数据库数据-->
        <TableLayout
            android:id="@+id/tableLayout_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTitle_admin_company"
            android:layout_marginTop="20dp"
            android:stretchColumns="0,1,2,3">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="公司名"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="项目名"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="设备类型"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="属性列表"/>
            </TableRow>
        </TableLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout_admin_company">
            <TableLayout
                android:id="@+id/tableLayout_in_admin_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2,3"/>
        </ScrollView>
        <Button
            android:id="@+id/buttonExit_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="返回"
            android:onClick="buttonExit_admin_companyOnClick"/>
        <TextView
            android:id="@+id/textTitleCount_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筛选企业数："
            android:layout_above="@+id/tableLayout_admin_company"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/textCount_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textTitleCount_admin_company"
            android:layout_above="@+id/tableLayout_admin_company"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/textTitle_admin_company"
            android:layout_below="@+id/searchView_admin_company"
            android:layout_above="@+id/tableLayout_admin_company"
            android:stretchColumns="0">
            <TableRow>
                <TextView
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/buttonAddCompany_admin_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="添加"
                    android:onClick="buttonAddCompany_admin_companyOnClick"/>
                <Button
                    android:id="@+id/buttonDeleteCompany_admin_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:onClick="buttonDeleteCompany_admin_companyOnClick"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout_1_admin_company"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <TextView
            android:id="@+id/textTitle_1_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加企业"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textGuidHorizon1_admin_company"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:layout_below="@+id/textTitle_1_admin_company"/>
        <TextView
            android:id="@+id/textCompanyName_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业名:"
            android:textSize="20sp"
            android:layout_below="@+id/textGuidHorizon1_admin_company"
            android:layout_marginLeft="40dp"/>
        <EditText
            android:id="@+id/editCompanyName_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textCompanyName_admin_company"
            android:layout_alignBaseline="@+id/textCompanyName_admin_company"
            android:textSize="18sp"
            android:hint="请输入企业名"
            android:layout_marginRight="40dp"/>
        <TextView
            android:id="@+id/textCompanyProject_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属工程:"
            android:textSize="20sp"
            android:layout_below="@+id/textCompanyName_admin_company"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@+id/textCompanyName_admin_company"/>
        <EditText
            android:id="@+id/editCompanyProject_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textCompanyProject_admin_company"
            android:layout_alignBaseline="@+id/textCompanyProject_admin_company"
            android:textSize="18sp"
            android:hint="请输入开发工程名"
            android:layout_alignRight="@+id/editCompanyName_admin_company"/>
        <TextView
            android:id="@+id/textCompanyDevice_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开发设备:"
            android:textSize="20sp"
            android:layout_below="@+id/textCompanyProject_admin_company"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@+id/textCompanyName_admin_company"/>
        <EditText
            android:id="@+id/editCompanyDevice_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textCompanyDevice_admin_company"
            android:layout_alignBaseline="@+id/textCompanyDevice_admin_company"
            android:textSize="18sp"
            android:hint="请输入设备类型"
            android:layout_alignRight="@+id/editCompanyName_admin_company"/>
        <TextView
            android:id="@+id/textCompanyActs_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关属性:"
            android:textSize="20sp"
            android:layout_below="@+id/textCompanyDevice_admin_company"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@+id/textCompanyName_admin_company"/>
        <EditText
            android:id="@+id/editCompanyActs_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textCompanyActs_admin_company"
            android:layout_alignBaseline="@+id/textCompanyActs_admin_company"
            android:textSize="18sp"
            android:hint="请输入相关属性；隔开"
            android:layout_alignRight="@+id/editCompanyName_admin_company"/>
        <TextView
            android:id="@+id/textGuidVertical1_admin_company"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/buttonConfirmAdd_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textGuidVertical1_admin_company"
            android:layout_below="@+id/editCompanyActs_admin_company"
            android:layout_marginTop="10dp"
            android:text="确认添加"
            android:onClick="buttonConfirmAdd_admin_companyOnClick"/>
        <Button
            android:id="@+id/buttonExitAdd_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textGuidVertical1_admin_company"
            android:layout_below="@+id/editCompanyActs_admin_company"
            android:layout_marginTop="10dp"
            android:text="退出"
            android:onClick="buttonExitAdd_admin_companyOnClick"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout_2_admin_company"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <TextView
            android:id="@+id/textTitle_2_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除企业"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textGuidHorizon2_admin_company"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:layout_below="@+id/textTitle_2_admin_company"/>
        <TextView
            android:id="@+id/textCompanyName_1_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业名:"
            android:textSize="20sp"
            android:layout_below="@+id/textGuidHorizon2_admin_company"
            android:layout_marginLeft="40dp"/>
        <EditText
            android:id="@+id/editCompanyName_1_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textCompanyName_1_admin_company"
            android:layout_alignBaseline="@+id/textCompanyName_1_admin_company"
            android:textSize="18sp"
            android:hint="请输入企业名"
            android:layout_marginRight="40dp"/>
        <TextView
            android:id="@+id/textCompanyProject_1_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属工程:"
            android:textSize="20sp"
            android:layout_below="@+id/textCompanyName_1_admin_company"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@+id/textCompanyName_1_admin_company"/>
        <EditText
            android:id="@+id/editCompanyProject_1_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textCompanyProject_1_admin_company"
            android:layout_alignBaseline="@+id/textCompanyProject_1_admin_company"
            android:textSize="18sp"
            android:hint="请输入开发工程名"
            android:layout_alignRight="@+id/editCompanyName_1_admin_company"/>
        <TextView
            android:id="@+id/textCompanyDevice_1_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开发设备:"
            android:textSize="20sp"
            android:layout_below="@+id/textCompanyProject_1_admin_company"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@+id/textCompanyName_1_admin_company"/>
        <EditText
            android:id="@+id/editCompanyDevice_1_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textCompanyDevice_1_admin_company"
            android:layout_alignBaseline="@+id/textCompanyDevice_1_admin_company"
            android:textSize="18sp"
            android:hint="请输入设备类型"
            android:layout_alignRight="@+id/editCompanyName_1_admin_company"/>
        <TextView
            android:id="@+id/textCompanyActs_1_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关属性:"
            android:textSize="20sp"
            android:layout_below="@+id/textCompanyDevice_1_admin_company"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@+id/textCompanyName_1_admin_company"/>
        <EditText
            android:id="@+id/editCompanyActs_1_admin_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textCompanyActs_1_admin_company"
            android:layout_alignBaseline="@+id/textCompanyActs_1_admin_company"
            android:textSize="18sp"
            android:hint="请输入相关属性；隔开"
            android:layout_alignRight="@+id/editCompanyName_1_admin_company"/>
        <TextView
            android:id="@+id/textGuidVertical2_admin_company"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/buttonConfirmDelete_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textGuidVertical2_admin_company"
            android:layout_below="@+id/editCompanyActs_1_admin_company"
            android:layout_marginTop="10dp"
            android:text="确认删除"
            android:onClick="buttonConfirmDelete_admin_companyOnClick"/>
        <Button
            android:id="@+id/buttonExitDelete_admin_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textGuidVertical2_admin_company"
            android:layout_below="@+id/editCompanyActs_1_admin_company"
            android:layout_marginTop="10dp"
            android:text="退出"
            android:onClick="buttonExitDelete_admin_companyOnClick"/>
    </RelativeLayout>
</RelativeLayout>