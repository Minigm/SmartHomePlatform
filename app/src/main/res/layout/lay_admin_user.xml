<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Administrator.act_admin_user">
    <RelativeLayout
        android:id="@+id/relativeLayout_0_admin_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <!--搜索框-->
        <SearchView
            android:id="@+id/searchView_admin_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="[搜索列] [内容](仅输入all列出所有)"
            android:layout_toLeftOf="@+id/buttonExit_admin_user"/>
        <!--标题栏-->
        <TextView
            android:id="@+id/textTitle_admin_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchView_admin_user"
            android:text="用户管理"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
        <!--用于显示数据库数据-->
        <TableLayout
            android:id="@+id/tableLayout_admin_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTitle_admin_user"
            android:layout_marginTop="20dp"
            android:stretchColumns="0,1,2">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="用户名"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="密码"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="用户类型"/>
            </TableRow>
        </TableLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout_admin_user">
            <TableLayout
                android:id="@+id/tableLayout_in_admin_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2,3"/>
        </ScrollView>
        <Button
            android:id="@+id/buttonExit_admin_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="返回"
            android:onClick="buttonExit_admin_userOnClick"/>
        <TextView
            android:id="@+id/textTitleCount_admin_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筛选用户数："
            android:layout_above="@+id/tableLayout_admin_user"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/textCount_admin_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textTitleCount_admin_user"
            android:layout_above="@+id/tableLayout_admin_user"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/textTitle_admin_user"
            android:layout_below="@+id/searchView_admin_user"
            android:layout_above="@+id/tableLayout_admin_user"
            android:stretchColumns="0">
            <TableRow>
                <TextView
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/buttonAddCompany_admin_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="添加"
                    android:onClick="buttonAddCompany_admin_userOnClick"/>
                <Button
                    android:id="@+id/buttonDeleteCompany_admin_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:onClick="buttonDeleteCompany_admin_userOnClick"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</RelativeLayout>