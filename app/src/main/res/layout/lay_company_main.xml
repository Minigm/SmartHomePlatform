<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Company.act_company_main">
    <RelativeLayout
        android:id="@+id/relativeLayout_0_company_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <TextView
            android:id="@+id/textWelcome_company_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/textGuidVertical1_company_main"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/buttonCheck_company_main"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="现有设备及属性"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/textGuidVertical1_company_main"
            android:textSize="22sp"
            android:onClick="buttonCheck_company_mainOnClick"/>
        <Button
            android:id="@+id/buttonAdd_company_main"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="添加设备及属性"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/buttonCheck_company_main"
            android:layout_marginTop="30dp"
            android:onClick="buttonAdd_company_mainOnClick"/>
        <Button
            android:id="@+id/buttonDelete_company_main"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="删除设备或属性"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/buttonAdd_company_main"
            android:layout_marginTop="30dp"
            android:onClick="buttonDelete_company_mainOnClick"/>
        <Button
            android:id="@+id/buttonExit_company_main"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="退出"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/buttonDelete_company_main"
            android:layout_marginTop="30dp"
            android:onClick="buttonExit_company_mainOnClick"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout_1_company_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <TextView
            android:id="@+id/textTitle_1_company_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="现有设备及属性"
            android:textSize="36sp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTitle_1_company_main">
            <TableLayout
                android:id="@+id/tableLayout_company_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2"/>
        </ScrollView>
        <Button
            android:id="@+id/buttonCheckBack_company_main"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:text="←"
            android:background="@color/colorNull"
            android:gravity="center|center_vertical"
            android:textSize="20dp"
            android:onClick="buttonCheckBack_company_mainOnClick"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout_2_company_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <TextView
            android:id="@+id/textTitle_2_company_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="添加设备及属性"
            android:textSize="30sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/editProject_company_main"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textTitle_2_company_main"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            android:hint="请输入开发项目"
            android:gravity="center"/>
        <EditText
            android:id="@+id/editDevice_company_main"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editProject_company_main"
            android:textSize="20sp"
            android:hint="请输入设备类型"
            android:gravity="center"/>
        <EditText
            android:id="@+id/editActs_company_main"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editDevice_company_main"
            android:textSize="20sp"
            android:hint="请输入设备属性 ;隔开"
            android:gravity="center"/>
        <Button
            android:id="@+id/buttonConfirmAdd_company_main"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editActs_company_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="确认添加"
            android:onClick="buttonConfirmAdd_company_mainOnClick"/>
        <Button
            android:id="@+id/buttonExitAdd_company_main"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonConfirmAdd_company_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="退出"
            android:onClick="buttonExitAdd_company_mainOnClick"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout_3_company_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <TextView
            android:id="@+id/textTitle_3_company_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="删除设备及属性\n注：全空则删除所有！"
            android:textSize="30sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/editProject_1_company_main"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textTitle_3_company_main"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            android:hint="请输入删除项目"
            android:gravity="center"/>
        <EditText
            android:id="@+id/editDevice_1_company_main"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editProject_1_company_main"
            android:textSize="20sp"
            android:hint="请输入删除设备类型"
            android:gravity="center"/>
        <EditText
            android:id="@+id/editActs_1_company_main"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editDevice_1_company_main"
            android:textSize="20sp"
            android:hint="请输入删除设备属性 ;隔开"
            android:gravity="center"/>
        <Button
            android:id="@+id/buttonConfirmDelete_company_main"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editActs_1_company_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="确认删除"
            android:onClick="buttonConfirmDelete_company_mainOnClick"/>
        <Button
            android:id="@+id/buttonExitDelete_company_main"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonConfirmDelete_company_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="退出"
            android:onClick="buttonExitDelete_company_mainOnClick"/>
    </RelativeLayout>
</RelativeLayout>