<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.act_user_main">
    <RelativeLayout
        android:id="@+id/relativeLayout_top_user_main"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAccent">
        <TextView
            android:id="@+id/textWelcome_user_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/buttonAddDevice_user_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="＋添加设备" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout_content_user_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_top_user_main"
        android:background="@color/colorSS">
        <TextView
            android:id="@+id/textTitle_content_user_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主要参数（最接近警报）"
            android:gravity="center"
            android:textSize="20sp"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3"
            android:layout_below="@+id/textTitle_content_user_main">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="温度："
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/textTemperature_user_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-℃"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="湿度"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/textHumidity_user_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-%RH"
                    android:textSize="20sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CO浓度："
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/textCO_user_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-mg/m³"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="燃气浓度"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/textGas_user_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-mg/m³"
                    android:textSize="20sp"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <GridView
        android:id="@+id/gridView_user_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_content_user_main"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:numColumns="2"/>
</RelativeLayout>